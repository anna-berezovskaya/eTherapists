<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyAppTheme" parent = "AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:actionBarTheme">@style/AppCompatActionBarStyle</item>
    </style>

    <style name="AppCompatSeekBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/seek_bcg_color</item>
        <item name="colorAccent">@color/seek_progress_color</item>
        <item name="android:elevation">@dimen/rc_seekbar_elevation</item>
    </style>
</resources>