<resources>

    <style name="MyAppTheme" parent = "AppTheme"/>

    <style name="AppCompatActionBarStyle" parent = "ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/actionBarBackround</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppCompatActionBarWidget" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/dlg_btn_color</item>
        <item name="colorControlActivated">@color/dlg_btn_color</item>
        <item name="colorControlHighlight">@color/dlg_btn_color</item>
    </style>

    <style name="AppCompatCheckedTextViewStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/seek_pane_color_green</item>
    </style>

    <style name="AppCompatSeekBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/seek_bcg_color</item>
        <item name="colorAccent">@color/seek_progress_color</item>
        <item name="elevation">@dimen/rc_seekbar_elevation</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/dlg_btn_color</item>
        <item name="android:textColorPrimary">@color/dlg_text_color</item>
        <item name="colorControlNormal">@color/dlg_controls_color</item>
        <item name="colorControlActivated">@color/dlg_controls_color</item>
        <item name="colorControlHighlight">@color/dlg_controls_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.Dialog">

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/blurred_bg</item>
        <item name="actionBarTheme">@style/AppCompatActionBarStyle</item>
        <item name="actionBarStyle">@style/AppCompatActionBarStyle</item>
        <item name="android:actionBarStyle">@style/AppCompatActionBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

</resources>
