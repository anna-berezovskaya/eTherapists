<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginRight="@dimen/padding_big"
        android:layout_marginLeft="@dimen/padding_big"
        android:background="@color/rc_background">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_round_circle_exercise"
            app:backgroundTint="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="sfasf"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/slideshow"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/padding_big"
        android:layout_marginLeft="@dimen/padding_big"
        android:background="@color/rc_background">

        <TextView
            android:id="@+id/tv_time_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="5min"/>

    </RelativeLayout>

</LinearLayout>